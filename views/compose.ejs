<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="newPostTitle">Title</label>
    <input type="text" class="form-control" name="postTitle" id="newPostTitle">
  </div>
  <div class="form-group">
    <label for="newPostText">Post</label>
    <textarea name="postText" class="form-control" rows="8" cols="40" id="newPostText"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

